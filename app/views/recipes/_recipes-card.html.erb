<div class="col" style="margin-bottom: 20px;">
  <%= link_to recipe_path(recipe), class: "card card-hover", style: "text-decoration: none;" do %>
    <div class="card-body" style="background-color: #ffffff; color: #1d2a3a; border: 2px solid rgba(29, 42, 58, 0.7); border-radius: 8px; padding: 15px; transition: transform 0.3s, box-shadow 0.3s;">
      <div class="mb-3">
        <span class="badge
          <%= 'bg-info' if recipe.difficulty.name == '初級' %>
          <%= 'bg-success' if recipe.difficulty.name == '中級' %>
          <%= 'bg-danger' if recipe.difficulty.name == '上級' %> text-light">
          難易度: <%= recipe.difficulty.name %>
        </span>
      </div>

      <h5 class="card-title" style="font-size: 1.25rem; font-weight: bold; color: #1d2a3a; margin-bottom: 10px;">
        <%= recipe.name %>
      </h5>

      <p class="card-text" style="margin: 0; font-size: 0.95rem; color: #1d2a3a;">
        <%= [recipe.base_liquor.name, *recipe.ingredients.map(&:name)].join(' + ') %>
      </p>
    </div>
  <% end %>
</div>
