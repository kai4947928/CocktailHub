<%= search_form_for @q, url: recipes_path, method: :get do |f| %>
  <div class="row mb-4">
    <div class="col-md-4">
      <%= f.label :base_liquor_id_eq, 'ベースのお酒' %>
      <%= f.collection_select :base_liquor_id_eq, BaseLiquor.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
    </div>

    <div class="col-md-4">
      <%= f.label :difficulty_id_eq, '難易度' %>
      <%= f.collection_select :difficulty_id_eq, Difficulty.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
    </div>

    <div class="col-md-4">
      <%= f.submit '検索', class: 'btn btn-primary mt-4' %>
    </div>
  </div>
<% end %>